              <div class='col-xs-12 form-group required'>
                <label class='control-label'>Name on Card</label>
                <input name='name' class='form-control' size='4' type='text'>
              </div>
            </div>
            <div class='form-row'>
              <div class='col-xs-12 form-group card required'>
                <label class='control-label'>Card Number</label>
                <input name='number' autocomplete='off' maxlength='16' minlength='16' class='form-control card-number' size='20' type='text'>
              </div>
            </div>
            <div class='form-row'>
              <div class='col-xs-4 form-group expiration required'>
                <label class='control-label'>Expiration</label>
                <input name='expiry_month' maxlength='2' minlength='2' class='form-control card-expiry-month' placeholder='MM' size='2' type='text'>
              </div>
              <div class='col-xs-4 form-group expiration required'>
                <label class='control-label'> </label>
                <input name='expiry_year' maxlength='2' minlength='2' class='form-control card-expiry-year' placeholder='YY' size='4' type='text'>
              </div>
            </div>
            <div class='form-row'>
              <div class='col-md-12 form-group'>
                <br>
                <input class='form-control btn btn-primary submit-button' value='Add new card' type='submit'>
              </div>
            </div>
          </form>
